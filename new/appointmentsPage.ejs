<%- include ('partials/header') -%>
    <%- include ('partials/navbar') -%>
        <div class="container">
            <div class="userinfo">
                <p>Welcome to Appointments Page
                    <strong>User Name</strong>:
                    <%= user.userName %>
                </p>
                <p><strong>Email</strong>:
                    <%= user.email %>
                </p>
                <div class="container">

                    <div class="card" style="max:width:740px">
                        <div class="card-header text-center">
                            <h5 class="card-title">
                                <%= patient.patName %>
                            </h5>
                            <h5 class="card-title">
                                <%= appointment.name %>
                            </h5>
                            <h5 class="card-title">
                                <%= appointment.doctorName %>
                            </h5>
                            <h5 class="card-title">
                                <%= appointment.time %>
                            </h5>
                            <h5 class="card-title">
                                <%= appointment.date %>
                            </h5>
                        </div>
                        <div>
                            <a class="btn btn-default btn-sm" href='"/appointments" + appointment.id + "/edit"'>Edit</a>
                        </div>
                        <div>
                            <form action='"/appointments/"+ appointment.id + "/delete"' method="POST" class=>
                                <button class="btn btn-danger btn-sm">Delete</button></form>
                        </div>

                        <div class="user-btn">
                            <a href="/logout" class="btn btn-primary">Logout</a>
                            <!-- <button class="btn btn-primary" onclick="schdeuler.start()">Ready to schedule Appointments</button> -->
                        </div>
                    </div>
                </div>
                <%- include ('partials/footer') -%>