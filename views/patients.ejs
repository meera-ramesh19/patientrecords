<%- include('partials/header') -%>


    <%- include('partials/navbar') -%>

        <body>
            <div class="container">

                <div class="card" style="max:width:740px">
                    <div class="card-header text-center">
                        <h5 class="card-title">
                            <%= patient.postTitle %>
                        </h5>
                        <h5 class="card-title">
                            <%= patient.user.patName %>
                        </h5>

                    </div>
                    <div class="card-body">
                        <div class="card-body text-center">
                            <p class="card-text">
                                <%= patient.patName %>
                            </p>
                            <p class="card-text">
                                <%= patient.patComments %>
                            </p>
                            <p class="card-text">
                                <%= patient.patReviews %>
                            </p>
                            <p class="card-text">
                                <%= patient.patPharmacyName %>
                            </p>
                        </div>
                        <div class="row  justify-content-evenly">
                            <div class="col-5">
                                <h5 class="card-title">
                                    <%= patient.docName %>
                                </h5>
                                <h5 class="card-title">
                                    <%= moment(patient.docVisitDate).format( 'DD MMM YYYY')%>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docSpecialize %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docInstructions %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docPills %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docCream %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docDrops %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.image %>
                                </h5>
                            </div>
                            <div class="col-3">
                                <h5 class="card-title">
                                    <%= patient.docName %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docVisitName %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docSpecialize %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docInstructions %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docPills %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docCream %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.docDrops %>
                                </h5>
                                <h5 class="card-title">
                                    <%= patient.image %>
                                </h5>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                            <a href="#" class="btn btn-primary  fa fa-edit">Update</a>
                            <a href="#" class="btn btn-primary fa fa-trash">Delete</a>

                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <h6 class="post-time text-center">
                            <%=relativeTime(post.postDate)%>
                        </h6>

                    </div>
                    <div class="container justify-content-center">
                        <div class="text-center">
                            <a class="btn btn-primary" href="/patients">New Patient</a>
                            <a class="btn btn-primary" href="/feed">Return to Feed</a>
                        </div>
                    </div>
                </div>


                <%- include('partials/footer') -%>